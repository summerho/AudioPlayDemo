<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="play"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/start_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/start_new"/>

        <ImageView
            android:id="@+id/stop_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:src="@mipmap/stop_new" />
    </LinearLayout>

    <TextView
        android:id="@+id/current_pos_tv"
        android:layout_width="150dp"
        android:background="#F8F1DD"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="14dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/duration_tv"
        android:layout_width="150dp"
        android:background="#F8F1DD"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="14dp"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/edit_tv"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:hint="输入跳转的位置（秒）"
            android:textSize="14dp"
            android:textColor="#FF2196F3" />

        <Button
            android:id="@+id/seek_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="seek"
            android:textSize="18dp" />
    </LinearLayout>


</LinearLayout>